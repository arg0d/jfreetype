<project default="compile">

    <target name="compile">
    	<mkdir dir="bin"/>
        <javac target="1.8" source="1.8" includeantruntime="false" srcdir="../../src" destdir="bin"/>
    </target>

    <target name="build-jar">
    	<delete file="bin/jfreetype.jar"/>
		<jar destfile="bin/jfreetype.jar"
		     basedir="../../bin" >
		 </jar>
	</target>

	<target name="clean">
		<!-- Clean bin -->
		 <delete dir="bin"/>
		 <mkdir dir="bin"/>

		 <!-- Clean FreeType -->		 
		 <delete dir="../../libs/freetype/objs"/>
		 <mkdir dir="../../libs/freetype/objs"/>
	</target>

</project>